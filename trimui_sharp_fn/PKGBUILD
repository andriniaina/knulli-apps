# Edit on github: https://github.com/LizardByte/Sunshine/blob/master/packaging/linux/Arch/PKGBUILD
# Reference: https://wiki.archlinux.org/title/PKGBUILD

VERSION=${VERSION:-0.1}
arch=('any')
pkgname='trimui_sharp_fn'
pkgdesc="config UI for trimui_sharp_led (for now)"
pkgrel=5
pkgver=$VERSION
echo ${pkgver}

package() {
    depends=("trimui_sharp_led")

    echo $PWD

    # --- binaries
    ls -latr ../release
    cp -R ../release/* $pkgdir

    # --- .BATOEXEC
    mkdir -p $pkgdir/userdata/system/pacman/batoexec
    cp ../.BATOEXEC $pkgdir/userdata/system/pacman/batoexec/$pkgname

}
