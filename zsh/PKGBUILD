# Edit on github: https://github.com/LizardByte/Sunshine/blob/master/packaging/linux/Arch/PKGBUILD
# Reference: https://wiki.archlinux.org/title/PKGBUILD

VERSION=${VERSION:-1.0}
arch=('any')
pkgname='zsh'
pkgdesc="zsh shell"
pkgrel=1
pkgver=$VERSION
echo ${pkgver}

build () {
    tar xvf ../zsh.txz # --directory $pkgdir
    chmod 775 $PWD
}
package() {
    echo $PWD
    cp -R $srcdir/* $pkgdir
    #rm -rf pkg
}
